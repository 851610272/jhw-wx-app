<view wx:if="{{images.length>1}}">
  <swiper mode="widthFix" class="swiper_box" indicator-dots="true"
    indicator-active-color="rgba(0, 0, 0, .7)" autoplay="true" duration="1200">
      <block wx:for-items="{{images}}">
          <swiper-item>
              <image mode="widthFix" src="{{item}}" class="slide-image"/>
          </swiper-item>
      </block>
  </swiper>
</view>
<view wx:elif="{{images.length==1}}">
  <view wx:for-items="{{images}}">
    <image mode="widthFix" class="banner" src="{{item}}"/>
  </view>
</view>
<view class="cells">
  <navigator url="/pages/detail/detail?id={{item.product_id}}&title={{item.name}}" class="cell" wx:for="{{list}}" wx:key="product_id">
    <view class="cell_bd">
      <image mode="widthFix" src="{{item.pic_path}}"></image>
      <view class="pro_title">{{item.name}}</view>
      <view class="pro_price"><text class="unit">￥</text>{{item.price}}</view>
    </view>
  </navigator>
  <navigator class="more" url="../product/product">查看全部商品</navigator>
</view>

<view wx:if="{{images.length>1}}">
  <swiper class="swiper_box" indicator-dots="{{indicatorDots}}" style="height:{{swiperHeight}}px"
    indicator-active-color="rgba(0, 0, 0, .7)" autoplay="{{autoplay}}" duration="1200">
      <block wx:for="{{images}}">
          <swiper-item>
              <image mode="widthFix" src="http://img.jihui88.com/{{item.serverPath}}" class="slide-image" bindload="imageLoad"/>
          </swiper-item>
      </block>
  </swiper>
</view>
<view wx:elif="{{images.length===1}}">
  <view wx:for="{{images}}">
    <image mode="widthFix" class="banner" src="http://img.jihui88.com/{{item.serverPath}}"/>
  </view>
</view>
<view class="cells">
  <navigator url="/pages/detail/detail?id={{item.product_id}}&title={{item.name}}" class="cell" wx:for="{{list}}" wx:key="product_id">
    <view class="cell_bd">
      <view class="pro_img"><image mode="widthFix" src="{{item.pic_path}}"></image></view>
      <view class="pro_title">{{item.name}}</view>
      <view class="pro_price"><text class="unit">￥</text>{{item.price}}</view>
    </view>
  </navigator>
  <navigator class="more" url="../product/product">查看全部商品</navigator>
</view>

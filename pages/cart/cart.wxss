/* cart.wxss */


.weui-cell wx-image {
  width: 3rem;
  height: 3rem;
}
.proInfo{
  display: block;
}
.price{
  color: #ff5001;
  margin-right: 15px;
  font-size: 14px
}
.quantity{
    margin-left: 5px;
    color: #999;
    font-size: 14px
}


.app-bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3rem;
    line-height: 3rem;
    border-top: 1px solid #D7D7D7;
    background: #FBFBFB;
    font-size: 14px;
}
.app-bottom .app-bottom-left {
    float: left;
    padding-left: 19px;
}
.app-bottom .app-bottom-right {
    float: right;
    padding-left: 0;
}
.app-bottom .cart-m-span {
    color: #ff5001;
    margin-right: 15px;
}
.app-bottom .order-submit {
    margin: 0;
    font-weight: 400;
    padding: 0;
    border-radius: 0;
    text-decoration: none;
    display: inline-block;
    width: 200rpx;
    height: 3rem;
    line-height: 3rem;
    background: #ff5001;
    text-align: center;
    color: #fff;
}




.weui-cell:first:before {
  left: 0;
  right: 0;
}
.weui-cell:first .weui-cell__bd {
  font-size: 18px;
  color: #000;
}
.weui-cell__bd.add{
  text-align: center;
  color: #999
}


.emptyCart image{
  width:128px;
  height: 128px;
  margin: 0 auto;
  padding: 1rem 0 0 0;
  display: block
}
.emptyCart text{
  text-align: center;
  padding: 1rem 0 2rem 0;
  font-size: 1rem;
  color:#999;
  display: block
}
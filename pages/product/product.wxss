/* 产品列表 */
.cells{display:flex;flex-wrap:wrap;justify-content:space-between;padding-bottom:2vh}
.cell{display:flex;width:49vw;box-sizing:border-box;padding-top:1.5vh}
.cell:nth-child(odd){justify-content:flex-start}
.cell:nth-child(even){justify-content:flex-end}
.cell_bd{overflow:hidden}
.cell_bd image{width:49vw}
.pro_title{padding:5px 5px 0 5px}
.pro_price{padding:5px}

/* 搜索列表 */
.wxSearch{height: 48px}
.wxSearch-section{background-color:#fff;padding:5px 20rpx;border-bottom:1px #eee solid;position: fixed;left:0;top:0;width:730rpx;}
.wxSearch-pancel{display:flex;flex-direction:row}
.wxSearch-input{flex:8;background-color:#f5f5f5;padding:5px 10px;font-size:16px;height:26px;}
.wxSearch-section .wxSearch-button{flex:1;border:none!important;color:#6495ed!important;font-size:14px;line-height:2.5}
.wxSearchTitle{display:block;padding:10px 5px 5px 10px;font-size:16px;text-align:center}
/* 历史记录 */
.wxSearch-container{position:fixed;top:48px;left:0;width:100%;background:#fff;border-bottom:1px #f8f8f8 solid}
.wxSearchHistory{padding:20rpx}
.wxSearchHistoryItem{color:#999;padding:7px 15px;font-size:14px;margin-right:10px;float:left;background:#f8f8f8}
.wxSearchDeleteAllBtn,.wxSearchHistoryEmpty{clear:both;margin:0 auto;text-align:center;color:#999;padding:10px;font-size:14px}

<view class="search">
  <view class="search-btn" bindtap="page" data-url="../search/search">
    <image src="../../images/search.png"></image>
    搜索商品
  </view>
</view>
<view class="cells">
  <navigator url="/pages/detail/detail?id={{item.product_id}}&title={{item.name}}" class="cell" wx:for="{{list}}" wx:key="product_id">
    <view class="cell_bd">
      <view class="pro_img"><image mode="widthFix" src="{{item.pic_path}}"></image></view>
      <view class="pro_title">{{item.name}}</view>
      <view class="pro_price"><text class="unit">￥</text>{{item.price}}</view>
    </view>
  </navigator>
</view>
<view wx:if="{{empty}}" style="text-align: center;font-size:14px;color:#999;padding:10px 0 20px 0;">{{emptyTip}}</view>

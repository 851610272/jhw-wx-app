<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell {{active === 'all' ? 'active' : ''}}" bindtap="page" data-url="../product/product">
      <view class="weui-cell__bd">全部商品</view>
  </view>
  <view class="weui-cell {{active === item.category_id ? 'active' : ''}}" wx:for="{{list}}" wx:key="category_id"
    bindtap="page" data-url="../product/product?category_id={{item.category_id}}&title={{item.name}}" data-cate="{{item.category_id}}">
      <view class="weui-cell__bd">{{item.name}}</view>
  </view>
</view>

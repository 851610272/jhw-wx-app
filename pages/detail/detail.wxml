<!--detail.wxml-->
<view class="detail_hd">
  <image mode="widthFix" src="{{detail.pic_path}}"></image>
  <view class="detail_title">
    {{detail.name}}
    <view class="price">￥{{detail.price}}</view>
  </view>
</view>

<view class='separator'></view>
<view class="weui-navbar">
    <view class="weui-navbar__item {{nav == '1' ? 'on' : ''}}" bindtap="nav" data-nav="1">
        图文详情
    </view>
    <view class="weui-navbar__item {{nav == '2' ? 'on' : ''}}" bindtap="nav" data-nav="2" style="border-right:none">
        成交记录
    </view>
</view>

<view class="detail_bd">
  <view hidden="{{nav != '1'}}">
    <rich-text nodes="{{detail.proddesc}}"></rich-text>
  </view>

  <view hidden="{{nav != '2'}}">
   <view class="weui-cells">
      <view class="weui-cell" wx:for="{{sellList}}" wx:key="sellIndex">
          <view class="weui-cell__bd">
            {{item.buyname}}
          </view>
          <view class="weui-cell__ft time">{{item.updateTime}}</view>
      </view>
      <view if:for="{{sellList.length == 0}}">
          暂无数据
      </view>
    </view>
  </view>
</view>

<view class="drawer_screen" bindtap="setModalStatus" data-status="0" wx:if="{{showModalStatus}}"></view>
<view animation="{{animationData}}" class="drawer_attr_box" wx:if="{{showModalStatus}}">
  <view class="weui-cells">
     <view class="weui-cell">
         <view class="weui-cell__hd">
             <image src="{{detail.pic_path}}" style="width:60px;height:60px"></image>
         </view>
         <view class="weui-cell__bd">
           {{detail.name}}
           <view class="price">￥{{detail.price}}</view>
         </view>
         <view class="weui-cell__ft close" bindtap="setModalStatus" data-status="0">
           <image src="../../images/x.png"></image>
         </view>
     </view>
   </view>
   <view class="drawer_attr_content">
       <view class="weui-cell" wx:for="{{attrList}}">
           <view class="weui-cell__bd weui-cell-attr">
             <view class="name">{{item.name}}</view>
             <text wx:for="{{item.eleList}}" wx:for-item="items" wx:for-index="idx" class="{{item.dx===idx?'active':''}}"
              data-index="{{index}}" data-idx="{{idx}}" bindtap="attrClick">{{items}}</text>
           </view>
       </view>
       <view class="weui-cell">
           <view class="weui-cell__hd">购买数量</view>
           <view class="weui-cell__bd">
             <!-- 主容器 -->
             <view class="stepper">
               <!-- 减号 -->
               <text class="{{minusStatus}}" bindtap="bindMinus">-</text>
               <!-- 数值 -->
               <input type="number" bindchange="bindManual" value="{{num}}" />
               <!-- 加号 -->
               <text class="normal" bindtap="bindPlus">+</text>
             </view>
           </view>
     </view>


   </view>
   <button class="btn-primary fixed" bindtap="pay" data-url="../cart/cart">确定</button>
</view>
<button class="btn-primary fixed" bindtap="setModalStatus" data-status="1">立即购买</button>
